<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_margin="16dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/holderImage"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        fresco:failureImage="@drawable/marvel_logo"
        fresco:placeholderImageScaleType="center"
        android:background="@color/blackT"/>

    <TextView
        android:id="@+id/holderTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/holderDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/details_home_border"
        android:padding="12dp"
        android:text="Open Details"
        android:layout_marginTop="8dp"/>

</LinearLayout>